<%= turbo_stream_from "users" %>

<% content_for :page_title, "Utenti Sistema" %>

<%# content_for :page_counter, t("search.results", count: @pagy.count) %>

<% content_for :page_actions do %>
  <%= link_to [:new, :user],
	      class: "btn btn-primary gap-2",
	      data: { turbo_frame: "modal" } do %>
    <%= icon("add", size: 20) %>
    <span class="hidden sm:inline"><%= t("actions.new", default: "Nuovo") %></span>
  <% end %>
<% end %>

<!-- TODO filters -->

<%= render "shared/header/page" %>

<%= render "shared/filter/active", filter_keys: @keys %>

<%= render "shared/table", pagy: @pagy do %>
  <thead>
    <tr>
      <th>Utente</th>
      <th>Username</th>
      <th class="text-center">Ruolo</th>
      <th>Contatti</th>
      <th class="w-1"></th>
    </tr>
  </thead>

  <tbody>
    <%= render partial: "user_row", collection: @users, as: :user %>

    <% if @users.empty? %>
      <tr>
        <td colspan="5" class="text-center py-10 opacity-50 italic">
          Nessun utente trovato.
        </td>
      </tr>
    <% end %>
  </tbody>
<% end %>
