<%= render layout: "products/shell", locals: { product: @product } do %>
  <div class="space-y-6">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
      <%# Prezzo %>
      <div class="stats shadow-sm border border-base-200 bg-base-100">
        <div class="stat">
          <div class="stat-figure text-primary opacity-20">
            <%= icon("euro_symbol", size: 32) %>
          </div>

          <div class="stat-title">Prezzo al Pubblico</div>

          <div class="stat-value text-primary">
            <%= format_money(@product.price) %>
          </div>
        </div>
      </div>

      <%# Durata %>
      <div class="stats shadow-sm border border-base-200 bg-base-100">
        <div class="stat">
          <div class="stat-figure text-secondary opacity-20">
            <%= icon("clock", size: 32) %>
          </div>

          <div class="stat-title">Validità</div>

          <div class="stat-value text-secondary">
            <%= display_value(@product.duration_days) %>
            <span class="text-lg">gg</span>
          </div>

          <div class="stat-desc">Giorni solari dall'attivazione</div>
        </div>
      </div>

      <%# Categoria %>
      <div class="stats shadow-sm border border-base-200 bg-base-100">
        <div class="stat">
          <div class="stat-figure opacity-20">
            <%= icon("receipt", size: 32) %>
          </div>

          <div class="stat-title">Contabilità</div>

          <div class="stat-value text-base">
            <% if @product.associative? %>
              <span class="text-info">Istituzionale</span>
            <% else %>
              <span class="text-warning">Associativo</span>
            <% end %>
          </div>

          <div class="stat-desc">Regime fiscale applicato</div>
        </div>
      </div>
    </div>

    <%# --- 2. CONTENUTO (Discipline) --- %>
    <div class="card bg-base-100 shadow-sm border border-base-200">
      <div class="card-body">
        <div class="flex items-center justify-between mb-2">
          <h3 class="font-bold text-lg opacity-70 flex items-center gap-2">
            <%= icon("fitness_center", size: 20) %> Discipline Abilitate
          </h3>
        </div>

        <p class="text-sm opacity-60 mb-4">
          L'acquisto di questo prodotto sblocca l'accesso ai tornelli per le
          seguenti attività:
        </p>

        <% if @product.disciplines.any? %>
          <div class="grid grid-cols-1 gap-2">
            <% @product.disciplines.each do |discipline| %>
              <div
                class="
                  flex items-center justify-between p-4 bg-base-200/30
                  rounded-lg border border-base-200
                "
              >
                <div class="flex items-center gap-3">
                  <div class="p-2 bg-base-100 rounded-lg shadow-sm">
                    <%= icon("success", size: 20, class: "text-success opacity-80") %>
                  </div>

                  <span class="font-bold">
                    <%= display_value(discipline.name) %>
                  </span>
                </div>

                <div class="flex gap-2">
                  <% if discipline.requires_medical_certificate? %>
                    <div
                      class="
                        badge badge-sm badge-ghost text-error gap-1
                        border-error/20 bg-error/5
                      "
                      title="Richiede Certificato Medico"
                    >
                      <%= icon("med", size: 14) %> Cert. Medico
                    </div>
                  <% end %>

                  <% if discipline.requires_membership? %>
                    <div
                      class="
                        badge badge-sm badge-ghost text-info gap-1
                        border-info/20 bg-info/5
                      "
                      title="Richiede Tesseramento"
                    >
                      <%= icon("card_membership", size: 14) %> Tesseramento
                    </div>
                  <% end %>
                </div>
              </div>
            <% end %>
          </div>
        <% else %>
          <%# EMPTY STATE %>
          <div
            class="
              alert alert-warning bg-warning/10 text-warning-content
              border-warning/20
            "
          >
            <%= icon("warning", size: 20) %>

            <div>
              <h3 class="font-bold">Nessuna disciplina collegata!</h3>

              <div class="text-xs">
                Questo prodotto non permette nessun accesso fisico. Utile solo
                per servizi extra.
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
<% end %>
