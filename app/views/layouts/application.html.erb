<!DOCTYPE html>

<html data-theme="<%= @theme %>">
  <head>
    <title><%= content_for(:title) || "Active Core" %></title>

    <meta name="viewport" content="width=device-width,initial-scale=1">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="application-name" content="Active Core">
    <meta name="mobile-web-app-capable" content="yes">

    <!-- TURBO -->
    <meta name="turbo-refresh-method" content="morph">
    <meta name="turbo-refresh-scroll" content="preserve">

    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= yield :head %>

    <%# Enable PWA manifest for installable apps (make sure to enable in config/routes.rb too!) %>
    <%# = tag.link rel: "manifest", href: pwa_manifest_path(format: :json) %>

    <link rel="icon" href="/icon.png" type="image/png">
    <link rel="icon" href="/icon.svg" type="image/svg+xml">
    <link rel="apple-touch-icon" href="/icon.png">

    <%# Includes all stylesheet files in app/assets/stylesheets %>
    <%= stylesheet_link_tag :app, "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <div>
      <div class="bg-base-100 drawer mx-auto max-w-[100rem] lg:drawer-open">
        <input id="main-drawer" type="checkbox" class="drawer-toggle">

        <div class="drawer-content">
          <%= render "shared/navbar" %>

          <!-- Flash Messages -->

          <main class="relative max-w-[100vw] px-6 pb-16 xl:pe-2">
            <%= yield %>
          </main>
        </div>

        <%= render "shared/sidebar" %>
      </div>
    </div>

    <%= render "shared/flash" %>
    <%= turbo_frame_tag "modal" %>

    <%= turbo_frame_tag "feedback_overlay" %>

    <div class="fixed bottom-6 right-6 z-[9999]">
      <%= link_to new_feedback_path(current_page: request.original_url),
		  class: "btn btn-circle btn-neutral btn-lg shadow-xl transition-transform hover:scale-110 tooltip tooltip-left border-2 border-base-100",
		  data: { turbo_frame: "feedback_overlay", tip: "Segnala un problema o suggerisci una funzione" } do %>
        <%= icon("chat_bubble", size: 25, class: "text-white") %>
      <% end %>
    </div>
  </body>
</html>
