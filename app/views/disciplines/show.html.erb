<%= render layout: "disciplines/shell", locals: { discipline: @discipline } do %>
  <div class="space-y-8">
    <%# --- 1. CONFIGURAZIONE REGOLE (KPI) --- %>
    <div>
      <h3
        class="
          font-bold text-sm uppercase opacity-50 tracking-wider mb-3 flex
          items-center gap-2
        "
      >
        <%= icon("settings", size: 16) %> Configurazione Accesso
      </h3>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <%# Card Regola: Certificato Medico %>
        <div class="card shadow-sm border <%= @discipline.requires_medical_certificate? ? 'bg-base-100 border-error/50' : 'bg-base-100 border-base-200 opacity-60' %>">
          <div class="card-body flex flex-row items-center gap-4 p-5">
            <div class="p-3 rounded-full <%= @discipline.requires_medical_certificate? ? 'bg-error/10 text-error' : 'bg-base-200 text-base-content/30' %>">
              <%= icon("med", size: 28) %>
            </div>

            <div>
              <div class="font-bold text-lg">Certificato Medico</div>

              <div class="text-sm opacity-70">
                <% if @discipline.requires_medical_certificate? %>
                  <span class="text-error font-medium">Richiesto per l'ingresso</span>
                <% else %>
                  Non richiesto
                <% end %>
              </div>
            </div>
          </div>
        </div>

        <%# Card Regola: Iscrizione/Membership %>
        <div class="card shadow-sm border <%= @discipline.requires_membership? ? 'bg-base-100 border-info/50' : 'bg-base-100 border-base-200 opacity-60' %>">
          <div class="card-body flex flex-row items-center gap-4 p-5">
            <div class="p-3 rounded-full <%= @discipline.requires_membership? ? 'bg-info/10 text-info' : 'bg-base-200 text-base-content/30' %>">
              <%= icon("card_membership", size: 28) %>
            </div>

            <div>
              <div class="font-bold text-lg">Tesseramento</div>

              <div class="text-sm opacity-70">
                <% if @discipline.requires_membership? %>
                  <span class="text-info font-medium">Quota annuale obbligatoria</span>
                <% else %>
                  Accesso libero
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <%# --- 2. PRODOTTI COLLEGATI --- %>
    <div>
      <div class="flex justify-between items-end mb-4">
        <h3
          class="
            font-bold text-sm uppercase opacity-50 tracking-wider flex
            items-center gap-2
          "
        >
          <%= icon("category", size: 16) %> Prodotti che includono questa disciplina
        </h3>

        <%# Piccolo contatore %>
        <span class="badge badge-sm badge-ghost"><%= display_value(@related_products.count) %></span>
      </div>

      <% if @related_products.any? %>
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4">
          <% @related_products.each do |product| %>
            <%= link_to product_path(product), class: "card bg-base-100 shadow-sm border border-base-200 hover:border-primary hover:shadow-md transition-all group" do %>
              <div class="card-body p-5">
                <div class="flex justify-between items-start mb-2">
                  <div class="font-bold text-lg group-hover:text-primary transition-colors">
                    <%= display_value(product.name) %>
                  </div>

                  <div class="badge badge-sm badge-ghost font-mono">
                    <%= display_value(product.duration_days) %>gg
                  </div>
                </div>

                <div class="flex justify-between items-end mt-2">
                  <div class="text-xs opacity-50">
                    <%= product.associative? ? "Istituzionale" : "Associativo" %>
                  </div>

                  <div class="font-mono text-xl font-bold">
                    <%= format_money(product.price) %>
                  </div>
                </div>
              </div>
            <% end %>
          <% end %>
        </div>
      <% else %>
        <%# EMPTY STATE %>
        <div class="alert shadow-sm border border-base-200 bg-base-100">
          <%= icon("info", size: 24, class: "opacity-40") %>

          <div>
            <h3 class="font-bold">Nessun prodotto collegato</h3>

            <div class="text-xs opacity-60">
              Attualmente non Ã¨ possibile vendere accessi per questa disciplina.
            </div>
          </div>

          <% if current_user.admin? %>
            <%= link_to "Crea Prodotto",
		      new_product_path(discipline_id: @discipline.id),
		      class: "btn btn-sm btn-outline",
		      data: { turbo_frame: "modal" } %>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
<% end %>
