<div class="container mx-auto max-w-4xl p-6 space-y-6">
  <%# BREADCRUMB & BACK %>
  <%= link_to disciplines_path, class: "btn btn-ghost btn-sm gap-1 pl-0 opacity-60 hover:opacity-100" do %>
    <%= icon("arrow_back", size: 16) %> Torna alla lista
  <% end %>

  <%# HEADER CARD %>
  <div class="card bg-base-100 shadow-xl border border-base-200">
    <div class="card-body">
      <div class="flex justify-between items-start">
        <div>
          <h2 class="card-title text-3xl font-mono mb-1">
            <%= @discipline.name %>
          </h2>

          <span class="text-sm opacity-60">Configurazione Disciplina</span>
        </div>

        <%= link_to edit_discipline_path(@discipline), class: "btn btn-outline btn-sm gap-2" do %>
          <%= icon("edit", size: 16) %> Modifica
        <% end %>
      </div>

      <div class="divider my-2"></div>

      <%# STATO REGOLE %>
      <div class="grid grid-cols-1 sm:grid-cols-2 gap-4 mt-2">
        <%# Regola 1: Certificato %>
        <div class="flex items-center gap-4 p-4 rounded-xl border <%= @discipline.requires_medical_certificate? ? 'border-error/30 bg-error/5' : 'border-base-200 bg-base-200/30 opacity-50' %>">
          <div class="p-3 rounded-full <%= @discipline.requires_medical_certificate? ? 'bg-error text-error-content' : 'bg-base-300' %>">
            <%= icon("medical_services", size: 24) %>
          </div>

          <div>
            <div class="font-bold">Certificato Medico</div>

            <div class="text-xs opacity-70">
              <%= @discipline.requires_medical_certificate? ? "Obbligatorio per accedere" : "Non richiesto" %>
            </div>
          </div>
        </div>

        <%# Regola 2: Membership %>
        <div class="flex items-center gap-4 p-4 rounded-xl border <%= @discipline.requires_membership? ? 'border-info/30 bg-info/5' : 'border-base-200 bg-base-200/30 opacity-50' %>">
          <div class="p-3 rounded-full <%= @discipline.requires_membership? ? 'bg-info text-info-content' : 'bg-base-300' %>">
            <%= icon("card_membership", size: 24) %>
          </div>

          <div>
            <div class="font-bold">Iscrizione Annuale</div>

            <div class="text-xs opacity-70">
              <%= @discipline.requires_membership? ? "Richiede quota associativa" : "Accesso libero" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <%# PRODOTTI COLLEGATI %>
  <div>
    <h3 class="font-bold text-lg opacity-70 mb-4 px-1">Prodotti Collegati</h3>

    <% if @related_products.any? %>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
        <% @related_products.each do |product| %>
          <%= link_to product_path(product), class: "card bg-base-100 shadow-sm border border-base-200 hover:border-primary transition-colors group" do %>
            <div class="card-body p-5">
              <div class="flex justify-between items-start">
                <div class="font-bold group-hover:text-primary">
                  <%= product.name %>
                </div>

                <div class="badge badge-ghost">
                  <%= product.duration_days %>gg
                </div>
              </div>

              <div class="font-mono text-xl mt-2">
                <%= format_money(product.price_cents / 100.0) %>
              </div>
            </div>
          <% end %>
        <% end %>
      </div>
    <% else %>
      <div class="alert bg-base-100 border border-base-200 shadow-sm">
        <%= icon("info", size: 20) %>

        <span>
          Nessun prodotto Ã¨ attualmente collegato a questa disciplina.
        </span>

        <%= link_to "Crea Prodotto", new_product_path(discipline_id: @discipline.id), class: "btn btn-xs btn-ghost" %>
      </div>
    <% end %>
  </div>
</div>
