<div class="space-y-8">
  <div class="md:flex md:items-center md:justify-between">
    <div class="min-w-0 flex-1">
      <h2
        class="
          text-2xl/7 font-bold text-gray-900 sm:truncate sm:text-3xl
          sm:tracking-tight
        "
      >
        Buongiorno, <%= Current.session.user.first_name %> ðŸ‘‹
      </h2>
    </div>
  </div>

  <div class="grid grid-cols-1 gap-5 sm:grid-cols-3">
    <div class="overflow-hidden rounded-lg bg-white px-4 py-5 shadow sm:p-6">
      <dt class="truncate text-sm font-medium text-gray-500">
        Cassa Mattina (Contanti)
      </dt>

      <dd class="mt-1 text-3xl font-semibold tracking-tight text-gray-900">
        <%= number_to_currency @daily_cash.morning_total %>
      </dd>
    </div>

    <div class="overflow-hidden rounded-lg bg-white px-4 py-5 shadow sm:p-6">
      <dt class="truncate text-sm font-medium text-gray-500">
        Cassa Pomeriggio (Contanti)
      </dt>

      <dd class="mt-1 text-3xl font-semibold tracking-tight text-gray-900">
        <%= number_to_currency @daily_cash.afternoon_total %>
      </dd>
    </div>

    <div class="overflow-hidden rounded-lg bg-indigo-600 px-4 py-5 shadow sm:p-6">
      <dt class="truncate text-sm font-medium text-indigo-100">
        Totale Contanti Oggi
      </dt>

      <dd class="mt-1 text-3xl font-semibold tracking-tight text-white">
        <%= number_to_currency @daily_cash.total %>
      </dd>
    </div>
  </div>

  <div class="grid grid-cols-1 gap-8 lg:grid-cols-3">
    <div class="lg:col-span-2">
      <div class="overflow-hidden bg-white shadow sm:rounded-md">
        <div class="px-4 py-5 sm:px-6 border-b border-gray-200">
          <h3 class="text-base font-semibold leading-6 text-gray-900">
            Ultimi Ingressi
          </h3>
        </div>

        <ul role="list" class="divide-y divide-gray-200">
          <% if @recent_accesses.any? %>
            <% @recent_accesses.each do |access| %>
              <li class="px-4 py-4 sm:px-6 hover:bg-gray-50">
                <div class="flex items-center justify-between">
                  <p class="truncate text-sm font-medium text-indigo-600">
                    <%= access.member.full_name %>
                  </p>

                  <div class="ml-2 flex shrink-0">
                    <p
                      class="
                        inline-flex rounded-full bg-green-100 px-2 text-xs
                        font-semibold leading-5 text-green-800
                      "
                    >
                      <%= access.entered_at.strftime("%H:%M") %>
                    </p>
                  </div>
                </div>
              </li>
            <% end %>
          <% else %>
            <li class="px-4 py-8 text-center text-gray-500 italic">
              Nessun ingresso registrato oggi.
            </li>
          <% end %>
        </ul>
      </div>
    </div>

    <div class="space-y-4">
      <button
        type="button"
        class="
          w-full rounded-md bg-indigo-600 px-3.5 py-2.5 text-sm
          font-semibold text-white shadow-sm hover:bg-indigo-500
          focus-visible:outline focus-visible:outline-2
          focus-visible:outline-offset-2 focus-visible:outline-indigo-600
        "
      >
        + Nuova Vendita
      </button>

      <button
        type="button"
        class="
          w-full rounded-md bg-white px-3.5 py-2.5 text-sm font-semibold
          text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300
          hover:bg-gray-50
        "
      >
        Cerca Socio
      </button>

      <div class="rounded-md bg-yellow-50 p-4 border border-yellow-200">
        <div class="flex">
          <div class="ml-3">
            <h3 class="text-sm font-medium text-yellow-800">Scadenze</h3>

            <div class="mt-2 text-sm text-yellow-700">
              <p>
                Ci sono <strong><%= @expiring_memberships %></strong>
                abbonamenti in scadenza questa settimana.
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
